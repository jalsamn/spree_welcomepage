<html>
  <head>
    <%== meta_data_tags %>
    <%= canonical_tag(current_store.url) %>
    <%= favicon_link_tag 'favicon.ico' %>
    <%= stylesheet_link_tag 'spree/frontend/all', media: 'screen' %>
    <%= csrf_meta_tags %>
    <%= javascript_include_tag 'spree/frontend/all' %>
  </head>
  <style type="text/css">
    img {
        max-width: 100%;
        max-height: 100%;
    }
        #footer {
      	background:#E55934  ;
        width:100%;
        height:100px;
        position:absolute;
        bottom:0;
        left:0;
    }    
    #header {
      	background:#E55934  ;
	      padding:10px;
    }
    body {
      background-image: url(/assets/producemain.jpg);
      background-size: cover;
    }
    #center-div
      {
            position: fixed;
            top: 50%;
            left: 50%;
            /* bring your own prefixes */
            transform: translate(-50%, -50%);
      }    
    div.transbox {
    margin: 30px;
    width: 720px;
    background-color: #ffffff;
    border: 1px solid black;
    opacity: 0.9;
    filter: alpha(opacity=90); /* For IE8 and earlier */
}
div.transbox h3 {
    text-align: center;
    margin: 5%;
    font-weight: bold;
    color: #000000;
}
div.transbox logo {
    text-align: center;
  font-size: 200%;
    margin: 5%;
    font-weight: bold;
    color: #FA7921;
}    
    
div.transbox p {
    text-align: center;
    margin: 2%;
    font-weight: bold;
    color: #000000;
    overflow: hidden;
    white-space: nowrap;
}
    div.transbox form {
    text-align: center;
    margin: 2%;
    font-weight: bold;
    color: #000000;
    overflow: hidden;
    white-space: nowrap;
}
    </style>
  
 
</html>